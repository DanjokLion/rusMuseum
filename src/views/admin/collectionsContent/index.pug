extends ../layout

block content
  h1.h3.mb-2.text-gray-800 Контент коллекций

  .card.shadow.mb-4
    .card-header.py-3
      a.btn.btn-primary.submit(href="/admin/collectionsContent/add") Добавить

    .card-body
      .table-responsive
        table.table.table-bordered#dataTable(width="100%" cellspacing="0")
          thead
            tr
              th Картинка
              th Коллекция
              th Автор
              th Дата редактирования
              th Управление
          tfoot
            tr
              th Картинка
              th Коллекция
              th Автор
              th Дата редактирования
              th Управление
          tbody
            if data != null
              for item in data
                tr
                  td(width='100px') 
                    a(href="/admin/collectionsContent/edit/"+ item.id)
                      if item.thumbnail != null
                        img(width='100%' src='/uploads/collections/'+ item['collection.link'] + '/thumbnail/' + item.thumbnail)
                      else
                        img(width='100%' src='/images/noimage.png')  
                  td= item[ 'collection.title' ]
                  td= item[ 'user.name' ] 
                  td= item.createdAt != null ? item.createdAt : "O_o"
                  td 
                    a(href="/admin/collectionsContent/edit/"+ item.id)
                      i.fas.fa-pencil-alt &nbsp;
                    i.fas.fa-trash-alt.delete(data-id=item.id data-action="/admin/collectionsContent/delete")
              else
                tr
                  td 
                    p Данные отсутствуют
