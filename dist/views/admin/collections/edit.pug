extends ../layout

block content
  .card.shadow.mb-4
    .card-header.py-3
      h3 Измененить Коллекцию
      
    .card-body
      form(action="/admin/collections/edit" method="POST" encType="multipart/form-data")
        .form-group
          label(for="title") Заголовок
          input.form-control#title(type="text" placeholder="Заголовок" name="title" value=data.title required)
            
        .form-group
          label(for="link") Ссылка
          input.form-control#link(type="text" placeholder="Ссылка" name="link" value=data.link)
        if data.thumbnail != null
          img(width='150px' src='/uploads/collections/' + data.thumbnail)
        else 
          img(width='150px;' src='/images/noimage.png')
        .form-group
          label(for="thumbnail") Превью
          input.form-control#thumbnail(type="file" name="thumbnail")
        
        .form-group
          label(for="meta_keywords") Ключевые слова
          input.form-control#meta_keywords(type="text" name="meta_keywords" value=data.meta_keyword)
            
        .form-group
          label(for="meta_description") Ключевое описание
          textarea.form-control#meta_description(rows="3" name="meta_description")=data.meta_description
            
        input(type="hidden" name="id" value=data.id)
          
        input(type="hidden" name="old" value=data.link)
        
        input(type="hidden" name="userId" value=currentUser.id)
        
            
        button.btn.btn-primary(type="submit") Сохранить
